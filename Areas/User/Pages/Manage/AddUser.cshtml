@page
@model Mona_Amiri.Areas.User.Pages.Manage.AddUserModel
@using Mona_Amiri.Services;
@{
  ViewData["Title"] = "افزودن کاربر";
}

<form asp-page-handler="AddUser" class="space-y-6">
  <div class="bg-white px-4 py-5 shadow sm:rounded-lg sm:p-6 max-w-[1440px] mx-auto">
    <div class="md:grid md:gap-6">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-900">اطلاعات کاربر جدید</h3>
        <p class="mt-1 text-sm text-gray-500">لطفا اطلاعات را کامل و دقیق وارد کنید</p>
        <div asp-validation-summary="ModelOnly" class="text-red-400"></div>
      </div>
      <div class="mt-5 md:col-span-2 md:mt-0">
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-6 sm:col-span-6">
            <label asp-for="Input.UserName" class="block text-sm font-medium text-gray-700">نام کاربری</label>
            <input asp-for="Input.UserName" aria-required="true" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            <span asp-validation-for="Input.UserName" class="text-red-400"></span>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Input.Password" aria-required="true" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            <span asp-validation-for="Input.Password" class="text-red-400"></span>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Input.ConfirmPassword" aria-required="true" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            <span asp-validation-for="Input.ConfirmPassword" class="text-red-400"></span>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <label asp-for="Input.FirstName" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Input.FirstName" aria-required="true" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            <span asp-validation-for="Input.FirstName" class="text-red-400"></span>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <label asp-for="Input.LastName" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Input.LastName" aria-required="true" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            <span asp-validation-for="Input.LastName" class="text-red-400"></span>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Input.Email" type="text" aria-required="true" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            <span asp-validation-for="Input.Email" class="text-red-400"></span>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <label asp-for="Input.PhoneNumber" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Input.PhoneNumber" type="text" aria-required="true" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            <span asp-validation-for="Input.PhoneNumber" class="text-red-400"></span>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <label asp-for="Input.Role" class="block text-sm font-medium text-gray-700"></label>
            <select asp-for="Input.Role" aria-required="true" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 sm:text-sm">
              <option value=@SD.EmployerEndUser>آرایشگر</option>
              <option value=@SD.CashierEndUser>منشی</option>
              <option value=@SD.AdminEndUser>مدیر</option>
            </select>
            <span asp-validation-for="Input.Role" class="text-red-400"></span>
          </div>

          <div class="col-span-6">
            <label asp-for="Input.Adress" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Input.Adress" type="text" aria-required="true" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            <span asp-validation-for="Input.Adress" class="text-red-400"></span>
          </div>

          <div class="col-span-6">
            <label asp-for="Input.Description" class="block text-sm font-medium text-gray-700">توضیحات (به کاربر ها نمایش داده میشود)</label>
            <textarea asp-for="Input.Description" type="text" aria-required="true" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"></textarea>
            <span asp-validation-for="Input.Description" class="text-red-400"></span>
          </div>
        </div>
      </div>
    </div>

    <div class="flex mt-4 col-span-6">
      <a asp-area="User" asp-page="/Manage/UserManagement" class="w-full text-center text-white rounded-r-md bg-red-400 py-2 px-4 text-sm font-medium text-gray-700 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">انصراف</a>
      <button type="submit" class="w-full inline-flex justify-center text-white rounded-l-md bg-green-500 py-2 px-4 text-sm font-medium text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">ذخیره</button>
    </div>
  </div>
</form>

@section Scripts {
  <script>
    const mobileMenuButton = document.getElementById("open-mobile-menu-button");

    mobileMenuButton.style.display = "none";
  </script>
  <partial name="_ValidationScriptsPartial" />
}