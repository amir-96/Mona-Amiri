@page
@model Mona_Amiri.Areas.User.Pages.Manage.Service.EditServiceModel
@{
  ViewData["Title"] = "ویرایش سرویس";
}

<form asp-page-handler="EditService" class="space-y-6">
  <div class="bg-white px-4 py-5 shadow sm:rounded-lg sm:p-6 max-w-[1440px] mx-auto">
    <div class="md:grid md:gap-6">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-900">ویرایش سرویس</h3>
        <p class="mt-1 text-sm text-gray-500">لطفا اطلاعات را کامل و دقیق وارد کنید</p>
        <div asp-validation-summary="ModelOnly" class="text-red-400"></div>
        <input asp-for="Input.Id" aria-required="true" class="hidden">
        <input asp-for="Input.userId" aria-required="true" class="hidden">
      </div>
      <div class="mt-5 md:col-span-2 md:mt-0">
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-6 sm:col-span-6">
            <label asp-for="Input.Name" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Input.Name" aria-required="true" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            <span asp-validation-for="Input.Name" class="text-red-400"></span>
          </div>

          <div class="col-span-6 sm:col-span-6 lg:col-span-2">
            <label asp-for="Input.Price" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Input.Price" type="number" aria-required="true" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            <span asp-validation-for="Input.Price" class="text-red-400"></span>
          </div>

          <div class="col-span-6 sm:col-span-3 lg:col-span-2">
            <label asp-for="Input.DurationHour" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Input.DurationHour" type="number" aria-required="true" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            <span asp-validation-for="Input.DurationHour" class="text-red-400"></span>
          </div>

          <div class="col-span-6 sm:col-span-3 lg:col-span-2">
            <label asp-for="Input.DurationMinute" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Input.DurationMinute" type="number" aria-required="true" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            <span asp-validation-for="Input.DurationMinute" class="text-red-400"></span>
          </div>

          <div class="col-span-6">
            <label asp-for="Input.Description" class="block text-sm font-medium text-gray-700"></label>
            <textarea asp-for="Input.Description" aria-required="true" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"></textarea>
            <span asp-validation-for="Input.Description" class="text-red-400"></span>
          </div>
        </div>
      </div>
    </div>

    <div class="flex mt-4 col-span-6">
      <a asp-area="User" asp-page="/Manage/Service/Index" asp-route-userId="@Model.Input.userId" class="w-full text-center text-white rounded-r-md bg-red-400 py-2 px-4 text-sm font-medium text-gray-700 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">انصراف</a>
      <button type="submit" class="w-full inline-flex justify-center text-white rounded-l-md bg-green-500 py-2 px-4 text-sm font-medium text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">ذخیره</button>
    </div>
  </div>
</form>

@section Scripts {
  <script>
    const mobileMenuButton = document.getElementById("open-mobile-menu-button");

    mobileMenuButton.style.display = "none";
  </script>
  <partial name="_ValidationScriptsPartial" />
}